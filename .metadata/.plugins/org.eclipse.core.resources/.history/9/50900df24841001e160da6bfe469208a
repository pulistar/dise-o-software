package herencia1;

public class Cylinder extends Circle {
    private double height;

    public Cylinder() {
        super(); // Llama al constructor de la clase base (Circle)
        this.height = 1.0;
    }

    public Cylinder(double radius) {
        super(radius); // Llama al constructor de la clase base (Circle)
        this.height = 1.0;
    }

    public Cylinder(double radius, double height) {
        super(radius); // Llama al constructor de la clase base (Circle)
        this.height = height;
    }

    public Cylinder(double radius, double height, String color) {
        super(radius, color); // Llama al constructor de la clase base (Circle)
        this.height = height;
    }

    public double getHeight() {
        return height;
    }

    public void setHeight(double height) {
        this.height = height;
    }

    public double getVolume() {
        return getArea() * height;
    }

    @Override
    public String toString() {
        return "Cylinder [radius=" + getRadius() + ", color=" + getColor() + ", height=" + height + "]";
    }
}
